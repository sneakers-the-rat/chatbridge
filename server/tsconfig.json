{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": ".",

  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": [
    "../node_modules", "roles"]
}
